<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rosa.ghostapp.SelectUser">

    <TextView android:text="GHOST" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="60dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player 1"
        android:ems="10"
        android:id="@+id/player1"
        android:layout_above="@+id/spinner"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Player 2"
        android:ems="10"
        android:id="@+id/player2"
        android:layout_above="@+id/spinner2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lets Play!"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_centerVertical="true"
        android:text="Choose a player"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2"
        android:layout_alignRight="@+id/player2"
        android:layout_alignEnd="@+id/player2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:text="Choose a player"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/player2"
        android:layout_alignStart="@+id/player2"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


    />
</RelativeLayout>
