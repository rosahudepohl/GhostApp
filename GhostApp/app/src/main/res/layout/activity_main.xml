<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="GHOST"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titelView"
        android:textSize="60dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Game"
        android:onClick="playGameListener"
        android:id="@+id/playGameButton"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/titelView"
        android:layout_alignLeft="@+id/titelView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscores"
        android:onClick="viewHighscoresListener"
        android:id="@+id/highscoresButton"
        android:layout_below="@+id/playGameButton"
        android:layout_alignRight="@+id/playGameButton"
        android:layout_alignEnd="@+id/playGameButton"
        android:layout_alignLeft="@+id/playGameButton"
        android:layout_alignStart="@+id/playGameButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/highscoresButton"
        android:layout_alignLeft="@+id/highscoresButton"
        android:layout_alignStart="@+id/highscoresButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="EN"
        android:onClick="setToEnglishListener"
        android:id="@+id/englishButton"
        android:layout_below="@+id/highscoresButton"
        android:layout_toLeftOf="@+id/dutchButton"
        android:layout_toStartOf="@+id/dutchButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="NL"
        android:onClick="setToDutchListener"
        android:id="@+id/dutchButton"
        android:layout_below="@+id/highscoresButton"
        android:layout_alignRight="@+id/highscoresButton"
        android:layout_alignEnd="@+id/highscoresButton" />

</RelativeLayout>
